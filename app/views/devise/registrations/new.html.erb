<%# 会員登録・サインアップ画面 %>

<%# カスタムファイルの読み込み %>
<%= stylesheet_link_tag 'custom', media: 'all', 'data-turbolinks-track': 'reload' %>

<div class="w-full mt-10">
  <div class="flex min-h-screen flex-col items-center pt-24 sm:justify-center sm:pt-0">
    <div class="w-full overflow-hidden bg-white shadow-lg sm:max-w-md sm:rounded-lg shadow-lg">
      <div class="flex items-center justify-center">
        <a href="#" class="flex items-center justify-center w-full">
          <div class="flex items-center justify-center overflow-hidden">
            <img src="<%= asset_path('flower3.jpg') %>" alt="Flower" class="object-cover">
          </div>
        </a>
      </div>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="mt-4 px-8">
          <label class="block text-md font-medium text-neutral-600" for="name"> Name </label>
          <%= f.text_field :name, required: true, autofocus: true, class: "block w-full py-2 pl-2 mt-1 text-sm text-neutral-600 placeholder-gray-300 transition duration-500 ease-in-out transform border border-transparent rounded-lg bg-gray-50 focus:outline-none focus:border-transparent focus:ring-2 focus:ring-white focus:ring-offset-2 focus:ring-offset-gray-300", placeholder: "Enter your display name" %>
        </div>

        <div class="mt-4 px-8">
          <label class="block text-md font-medium text-neutral-600" for="email"> Email </label>
          <%= f.email_field :email, required: true, autofocus: true, class: "block w-full py-2 pl-2 mt-1 text-sm text-neutral-600 placeholder-gray-300 transition duration-500 ease-in-out transform border border-transparent rounded-lg bg-gray-50 focus:outline-none focus:border-transparent focus:ring-2 focus:ring-white focus:ring-offset-2 focus:ring-offset-gray-300", placeholder: "Enter your email" %>
        </div>

        <div class="mt-4 px-8">
          <label class="block text-md font-medium text-neutral-600" for="password"> Password </label>
          <%= f.password_field :password, required: true, autofocus: true, class: "block w-full py-2 pl-2 mt-1 text-sm text-neutral-600 placeholder-gray-300 transition duration-500 ease-in-out transform border border-transparent rounded-lg bg-gray-50 focus:outline-none focus:border-transparent focus:ring-2 focus:ring-white focus:ring-offset-2 focus:ring-offset-gray-300", placeholder: "Enter your password" %>
        </div>

        <div class="mt-4 px-8">
          <label class="block text-md font-medium text-neutral-600" for="password_confirmation"> Confirm Password </label>
          <%= f.password_field :password_confirmation, required: true, autofocus: true, class: "block w-full py-2 pl-2 mt-1 text-sm text-neutral-600 placeholder-gray-300 transition duration-500 ease-in-out transform border border-transparent rounded-lg bg-gray-50 focus:outline-none focus:border-transparent focus:ring-2 focus:ring-white focus:ring-offset-2 focus:ring-offset-gray-300", placeholder: "Enter repeat your password" %>
        </div>
        
        <%# 画像のアップロードボタン %>
        <div class="mt-4 px-8">
          <%= f.label :avatar, class: "block text-md font-medium text-neutral-600" %>
          <%= f.file_field :avatar, class: "block w-full text-sm text-slate-500 border border-gray-200 rounded-lg file:mr-4 file:py-2 file:px-4 file:rounded-sm file:border-0 file:text-sm file:font-semibold file:bg-gray-50 file:text-gray-600 hover:file:bg-gray-100" %>
        </div>
        
        <div class="mt-4  pb-8 pr-8 flex items-center justify-end">
          <a class="text-sm text-gray-500 hover:text-neutral-600 focus:text-yellow-600" href="<%= new_session_path(resource_name) %>"> アカウントをお持ちの方 </a>
          <%= f.submit "登録する", class: "ml-4 inline-flex items-center rounded-lg bg-gray-200 p-2 text-sm text-white btn-custom w-1/4" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
