<div class="mt-20 px-4 py-16 mx-auto sm:max-w-xl md:max-w-full lg:max-w-screen-xl md:px-24 lg:px-8 lg:py-20">
  <div class="grid gap-5 row-gap-8 lg:grid-cols-2">
    <div class="flex flex-col justify-center">
      <div class="back-color-custom max-w-xl mb-6">
        <%# 施術名 %>
        <h3 class="m-3 max-w-lg mb-6 text-lg font-bold tracking-tight text-gray-900 sm:text-xl sm:leading-none">施術名　<%= @post.title %></h3>
        
        <div class="mb-6 flex items-center space-x-6">
          <%# 満足度 %>
          <h3 class="m-3 text-lg font-bold tracking-tight text-gray-900 sm:text-xl sm:leading-none">満足度</h3>
          <div class="flex">
            <% 1.upto(5) do |i| %>
              <i class="fas fa-star <%= 'text-yellow-500' if i <= @post.satisfaction_rating %> text-2xl"></i>
            <% end %>
          </div>
        </div>
        
        <%# 施術日 %>
        <h3 class="m-3 max-w-lg text-lg font-bold tracking-tight text-gray-900 sm:text-xl sm:leading-none">
          施術日　<%= @post.procedure_date.strftime("%Y年%m月%d日") %>
        </h3>
        
        <%# 投稿のカテゴリ %>
        <h3 class="m-3 max-w-lg text-lg font-bold tracking-tight text-gray-900 sm:text-xl sm:leading-none">
          カテゴリ
          <span class="m-3 inline-block px-4 py-2 font-bold text-sm text-white login-btn-custom rounded-2xl shadow-md">
            <%= @post.post_category.presence || 'カテゴリが選択されていません' %>
          </span>
        </h3>
      </div>
      <div class="grid gap-5 row-gap-8 sm:grid-cols-2">
        <div class="bg-white border-l-4 shadow-sm border-yellow-500">
          <div class="h-full w-144 p-5 border border-l-0 rounded-r">
            <h6 class="text-lg mb-2 font-semibold leading-5">
              内容
            </h6>
            <p class="text-base text-gray-900">
              <%= @post.body %>
            </p>
          </div>
        </div>
      </div>
    </div>
    <div>
      <%= image_tag @post.procedure_image.url, class: "object-cover w-full h-56 rounded shadow-lg sm:h-96" %>
    </div>
  </div>

  <%# 編集ボタン %>
  <div class="mt-6">
    <% if user_signed_in? && current_user == @post.user %>
      <%= link_to 'Edit', edit_post_path(@post), class: 'py-2 px-4 btn-custom text-white w-1/6 transition ease-in duration-200 text-center text-base font-semibold shadow-md focus:outline-none' %>
    <% end %>
  </div>
  
  <div class="mt-6">
    <%= link_to @post, method: :delete, data: { confirm: '本当に削除しますか？' }, class: 'inline-flex items-center px-4 py-2 font-bold text-sm text-white bg-red-600 rounded-sm shadow-md hover:bg-red-700' do %>
      <svg class="w-4 h-4 mr-2" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
        <path d="M9 3v1H4v2h16V4h-5V3H9zm3 1h2v1h-2V4zM4 7v14c0 1.1046.89543 2 2 2h12c1.1046 0 2-.8954 2-2V7H4zm4 2h2v10H8V9zm6 0h2v10h-2V9z"/>
      </svg>
      削除
    <% end %>
  </div>
</div>

