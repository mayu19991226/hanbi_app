<%= stylesheet_link_tag 'custom', media: 'all', 'data-turbolinks-track': 'reload' %>

<!-- トピックナビゲーション:パーシャル -->
<%= render partial: 'shared/article/topic' %>

<div class="bg-white">
  <!-- ページのタイトル -->
  <div class="w-full container mx-auto">
    <div class="flex flex-col items-center pt-8">
      <a class="font-bold text-gray-800 uppercase hover:text-gray-700 text-4xl" href="#">
        <%= @area_category.body_title %>
      </a>
    </div>
  </div>

  <!-- 記事 -->
  <div class="container mx-auto flex flex-wrap py-6">
    <section class="w-full md:w-2/3 flex flex-col items-center px-3">
      <article class="flex flex-col shadow-2xl my-4">
        <!-- 記事のトップ画像 -->
        <a href="#" class="hover:opacity-75">
          <img class="w-full" src=<%= @area_category.body_image %>>
        </a>
        <%# 記事の内容 %>
        <%= render partial: "shared/area_categories/#{@area_category.body}" %>
      </article>
    </section>
    <!-- 投稿のサイドバー:パーシャル -->
    <%= render partial: 'shared/article/sidebar' %>
  </div>
</div>