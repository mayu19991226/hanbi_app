<header class="fixed z-10 bg-white text-gray-800 w-full">
  <nav class="container mx-auto flex  items-center py-4">
    <%= image_tag 'logo2.png', alt: 'MyApp Logo', class: 'h-10 mr-4' %>
    <ul class="flex space-x-4">
      <li><a href="/" class="hover:underline w-24 h-7 text-yellow-600 text-3xl">HanBi</a></li>

      <!-- 検索フォーム -->
      <div class="w-60 h-9 relative">
        <!-- 検索フォーム -->
        <form action="/search" method="GET" class="relative w-full h-full">
          <!-- 背景と枠 -->
          <div class="absolute inset-0 bg-white rounded-3xl border-2 border-yellow-600"></div>
          <!-- プレースホルダー -->
          <input type="text" name="query" placeholder="施術名・悩み・アイテムなどで検索" 
                class="absolute left-[12px] top-0 w-[calc(100%-3rem)] h-full bg-transparent text-zinc-400 text-xs font-thin font-['Inter'] focus:outline-none focus:ring focus:border-blue-400 placeholder:text-zinc-400 placeholder:text-xs">
          <!-- 検索ボタン -->
          <button type="submit" class="absolute right-[5px] top-1/2 transform -translate-y-1/2 w-6 h-6 bg-yellow-600 rounded-full focus:outline-none">
            <!-- 検索アイコンを入れることができます -->
            <svg class="m-auto w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-4.35-4.35M16.65 16.65a8.575 8.575 0 111.414-1.414l4.351 4.351z"></path>
            </svg>
          </button>
        </form>
      </div>

      </div>
      <!-- ここに他のナビゲーションリンクを追加 -->
    </ul>
    <div class="ml-auto space-x-4 flex items-center">
      <a href="/users/sign_in" class="text-gray-800 hover:underline">ログイン</a>
      <span class="text-gray-800">｜</span> <!-- 縦の区切り線 -->
      <a href="/users/sign_up" class="text-gray-800 hover:underline">会員登録</a>
      <%= button_to "ログアウト", destroy_user_session_path, method: :delete, class: "text-gray-800 hover:underline" %>
    </div>
  </nav>
</header>