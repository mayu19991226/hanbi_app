<section class="">
  <div class="flex flex-wrap mx-auto p-20">

    <!-- 1段目 -->
    <% @area_categories.each do |area_category| %>
      <div class="w-full md:w-1/4 p-2">
        <a href="<%= area_category_path(area_category) %>">
          <div class="relative flex flex-col items-start m-1 transition duration-300 ease-in-out delay-150 transform bg-white shadow-2xl rounded-xl md:w-60 md:hover:-translate-x-16 md:hover:-translate-y-8">
            <%= image_tag area_category.area_image, class: 'object-cover object-center w-full rounded-t-xl lg:h-48 md:h-36', alt: 'blog' %>
            <div class="px-6 py-8">
              <h4 class="mt-4 text-2xl font-semibold text-neutral-600">
                <span><%= area_category.title %></span>
              </h4>
              <p class="mt-4 text-base font-normal text-gray-500 leading-relax"><%= area_category.body_title %></p>
            </div>
          </div>
        </a>
      </div>
    <% end %>
  </div>
</section>