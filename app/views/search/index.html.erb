<h1>検索結果</h1>

<h2>Posts</h2>
<% if @posts.any? %>
  <% @posts.each do |post| %>
    <div>
      <h3><%= post.title %></h3>
      <p><%= post.body %></p>
    </div>
  <% end %>
<% else %>
  <p>No posts found.</p>
<% end %>

<h2>Comments</h2>
<% if @comments.any? %>
  <% @comments.each do |comment| %>
    <div>
      <p><%= comment.body %></p>
    </div>
  <% end %>
<% else %>
  <p>No comments found.</p>
<% end %>

<h2>Area Categories</h2>
<% if @area_categories.any? %>
  <% @area_categories.each do |area_category| %>
    <div>
      <h3><%= area_category.title %></h3>
    </div>
  <% end %>
<% else %>
  <p>No area categories found.</p>
<% end %>
